{
  "compilerOptions" : {
    "allowJs" : true,
    "baseUrl" : "./src",
    "checkJs" : false,
    "esModuleInterop" : true,
    "forceConsistentCasingInFileNames" : true,
    "module" : "CommonJS",
    "moduleResolution" : "node",
    "outDir" : "./dist",
    "skipLibCheck" : true,
    "strict" : true,
    "target" : "ES6",
    "typeRoots" : [
      "./node_modules/@types",
      "./types"
    ]
  },
  "exclude" : [
    "node_modules"
  ],
  "include" : [
    "src/**/*.ts",
    "scr/shared/types/env.d.ts"
  ]
}